{
  "name": "react-pure-html-component-loader",
  "version": "1.0.0-beta.3",
  "description": "A Webpack loader allowing imports of HTML components as they were React pure functional components",
  "main": "./loader/index.js",
  "private": true,
  "scripts": {
    "clean": "node scripts/clean",
    "demo": "node demo",
    "lint": "eslint **/*.js **/*.jsx --ignore-pattern integration-tests/components",
    "unit-test": "mocha 'lib/**/*.spec.js'",
    "integration-test": "mocha 'integration-tests/**/*.spec.js'",
    "test": "npm run unit-test && npm run integration-test",
    "check-all": "npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonrelet/react-pure-html-component-loader.git"
  },
  "keywords": [
    "html",
    "components",
    "pure",
    "functional",
    "react",
    "webpack",
    "loader"
  ],
  "author": "Simon Relet",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/simonrelet/react-pure-html-component-loader/issues"
  },
  "homepage": "https://github.com/simonrelet/react-pure-html-component-loader#readme",
  "eslintConfig": {
    "extends": "react-simonrelet"
  },
  "devDependencies": {
    "axios": "^0.15.2",
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "del": "^2.2.2",
    "eslint": "^3.5.0",
    "eslint-config-react-simonrelet": "^1.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "fs-promise": "^1.0.0",
    "glob": "^7.1.1",
    "html-webpack-plugin": "^2.22.0",
    "json-loader": "^0.5.4",
    "lodash.omit": "^4.5.0",
    "minimist": "^1.2.0",
    "mocha": "^3.1.2",
    "node-sass": "^4.4.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "change-case": "^3.0.0",
    "htmlparser2": "^3.9.1"
  }
